<div id="home" data-role="page">
<%= image_tag 'header-image.png', :class=>"img-responsive" %>
<script src="/assets/bootstrap.min.js"></script>
<div  data-role="header" style="background:#03003E" >
  <%= link_to '戻る', {:action=>:index}, :data=>{:icon=>"carat-l",:role=>"button"}, :style=>"color:white; font-size:15px; border: 1px solid   #03003E ; background: #03003E ;text-shadow: 0 0px 0px #03003E ;text-decoration: none",:method => :get %>
  <h1 style="text-align:center ; text-shadow: 0 0px 0px #03003E ;text-decoration: none"><font size="5" color="#ffffff">寺の詳細</font></h1>
</div>
<center>
  <%= image_tag @temple.picUrl , :class=>"img-responsive", :width=>"70%", :height=>"auto" %>
</center>
<!--一段階要素を内側に-->
<div role="main" class="ui-content">
  <div id="sect_detail">
  </div>
  <%= image_tag "officialbutton.png", class:"img-responsive", width:"50%", style:"display: block; margin-left: auto; margin-right:auto;" %>
</div>
<div id="temple-items">
  <div id=temple-frame class="container">
    <div id="temple-text">
      <h2><%= @temple.name %></h2>
    </div>
    <ul class="media-list">
      <li>
        <a class="media-left" href="#">
  <%= image_tag @temple.picUrl , :class=>"img-responsive", :width=>"280", :height=>"100" %>
        </a>
        <div id="temple-description" class="media-body">
          <p align='left'>得られる経験</p>
          <br>
          <p><%= @temple.experience %></p>
        </div>
      </li>
    </ul>
    <div id="treatment">
      <div id="temple-text">
        <h4>待遇</h4>      
      </div>
      <h4>
        <div id="temple-status">
          <span class="label label-white">食費<%= @temple.foodExpense %>円</span>
          <span class="label label-white">生活費<% @temple.wages ? "一部支援" : "なし"  %></span>
          <span class="label label-white">衣装貸出<%= @temple.costume %></span>

          <span class="label label-white">駅から<%= @temple.distanceFromStation %>km</span>
          <span class="label label-white">宿泊費<%= @temple.rent %>円</span>
        </div>
      </h4>
    </div>
    <div id="time">
      <div id="temple-text">
        <h4>時間</h4>
      </div>
      <h4>
        <div id="temple-status">
          <span class="label label-white">修業<%= @temple.minYears %>年</span>
          <span class="label label-white">1日<%= @temple.workingHours %>時間勤務</span>
        </div>
      </h4>
    </div>

    <br>
  </div>
</div>

